---
import profileImage from "../assets/profile.png";
import { Image } from "astro:assets";
---

<section
    id="about"
    class="min-h-[80vh] flex flex-col-reverse md:flex-row items-center justify-center gap-10 md:gap-16 pt-40 md:pt-24"
>
    <!-- Text Content (Moved to Left) -->
    <div class="flex-1 space-y-4 animate-fade-in text-center md:text-left">
        <h1
            class="text-4xl md:text-6xl font-bold tracking-tight text-gray-900 dark:text-white leading-tight"
        >
            Hi, I'm <span class="inline-flex gap-2">
                <span class="relative group cursor-pointer">
                    <button
                        id="pronounce-eldho"
                        class="absolute left-1/2 -translate-x-1/2 -top-10 px-3 py-1.5 rounded-full bg-white/90 dark:bg-dark-surface/90 backdrop-blur-sm border border-gray-200 dark:border-dark-border shadow-lg text-sm font-medium text-gray-600 dark:text-gray-300 opacity-0 group-hover:opacity-100 transition-all duration-300 translate-y-2 group-hover:translate-y-0 flex items-center gap-2 hover:text-primary-600 dark:hover:text-primary-400 hover:border-primary-500/50 whitespace-nowrap z-50"
                        aria-label="Play pronunciation for Eldho"
                    >
                        /el-dho/
                        <i
                            class="fa-solid fa-volume-high text-xs bg-transparent"
                        ></i>
                    </button>
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-primary-700 dark:from-primary-400 dark:to-primary-500 transition-transform duration-300 group-hover:-translate-y-1 inline-block"
                        >Eldho</span
                    >
                </span>
                <span class="relative group cursor-pointer">
                    <button
                        id="pronounce-eapen"
                        class="absolute left-1/2 -translate-x-1/2 -top-10 px-3 py-1.5 rounded-full bg-white/90 dark:bg-dark-surface/90 backdrop-blur-sm border border-gray-200 dark:border-dark-border shadow-lg text-sm font-medium text-gray-600 dark:text-gray-300 opacity-0 group-hover:opacity-100 transition-all duration-300 translate-y-2 group-hover:translate-y-0 flex items-center gap-2 hover:text-primary-600 dark:hover:text-primary-400 hover:border-primary-500/50 whitespace-nowrap z-50"
                        aria-label="Play pronunciation for Eapen"
                    >
                        /ea-pen/
                        <i
                            class="fa-solid fa-volume-high text-xs bg-transparent"
                        ></i>
                    </button>
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-primary-700 dark:from-primary-400 dark:to-primary-500 transition-transform duration-300 group-hover:-translate-y-1 inline-block"
                        >Eapen</span
                    >
                </span>
            </span>
        </h1>

        <script>
            const playAudio = (file: string) => {
                const audio = new Audio(file);
                audio.play().catch((err) => {
                    console.warn("Pronunciation audio missing:", err);
                });
            };

            document
                .getElementById("pronounce-eldho")
                ?.addEventListener("click", (e) => {
                    e.stopPropagation();
                    playAudio("/eldho.mp3");
                });

            document
                .getElementById("pronounce-eapen")
                ?.addEventListener("click", (e) => {
                    e.stopPropagation();
                    playAudio("/eapen.mp3");
                });
        </script>
        <h2
            class="text-2xl md:text-3xl font-medium text-gray-600 dark:text-gray-400"
        >
            and I'm a <span
                class="inline-block h-[1.2em] overflow-hidden align-bottom"
            >
                <span class="animate-text-slide inline-block">
                    <span
                        class="block h-[1.2em] text-primary-600 dark:text-primary-400 font-semibold"
                        >Software Engineer</span
                    >
                    <span
                        class="block h-[1.2em] text-primary-600 dark:text-primary-400 font-semibold"
                        >Graphic Designer</span
                    >
                    <span
                        class="block h-[1.2em] text-primary-600 dark:text-primary-400 font-semibold"
                        >Software Engineer</span
                    >
                </span>
            </span>
        </h2>

        <style>
            .animate-text-slide {
                animation: text-slide 6s cubic-bezier(0.83, 0, 0.17, 1) infinite;
            }
            @keyframes text-slide {
                0%,
                45% {
                    transform: translateY(0);
                }
                50%,
                95% {
                    transform: translateY(-33.33%);
                }
                100% {
                    transform: translateY(-66.66%);
                }
            }
        </style>
        <p
            class="max-w-xl text-gray-600 dark:text-gray-400 text-lg leading-relaxed pt-4 mx-auto md:mx-0"
        >
            Diploma Computer Engineering student building real-world software â€”
            backend systems, APIs, and database-driven applications.
        </p>

        <div
            class="mt-10 flex flex-wrap justify-center md:justify-start gap-4 animate-slide-up"
            style="animation-delay: 300ms;"
        >
            <!-- Primary CTA: Resume Download -->
            <a
                href="/resume.pdf"
                download
                class="px-6 py-3 rounded-full bg-primary-600 hover:bg-primary-500 text-white font-medium transition-all shadow-lg shadow-primary-500/25 flex items-center gap-2 transform hover:-translate-y-1"
            >
                <i class="fa-solid fa-download"></i>
                Download Resume
            </a>
            <!-- Secondary CTA: View Projects -->
            <a
                href="#projects"
                class="px-6 py-3 rounded-full bg-white dark:bg-dark-surface border border-gray-200 dark:border-dark-border hover:border-primary-500/50 text-gray-900 dark:text-white font-medium transition-all flex items-center gap-2 transform hover:-translate-y-1 shadow-sm hover:shadow-md"
            >
                View Projects
                <i class="fa-solid fa-arrow-right"></i>
            </a>
        </div>

        <!-- Social Links -->
        <div
            class="mt-8 flex flex-wrap justify-center md:justify-start gap-4 animate-slide-up"
            style="animation-delay: 450ms;"
        >
            <a
                href="https://github.com/eladhon"
                target="_blank"
                rel="noopener noreferrer"
                class="p-3 rounded-full bg-gray-100 dark:bg-dark-surface border border-gray-200 dark:border-dark-border text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 hover:border-primary-500/50 transition-all hover:-translate-y-1"
                aria-label="GitHub"
            >
                <i class="fa-brands fa-github text-xl"></i>
            </a>
            <a
                href="https://linkedin.com/in/eldhoeapen"
                target="_blank"
                rel="noopener noreferrer"
                class="p-3 rounded-full bg-gray-100 dark:bg-dark-surface border border-gray-200 dark:border-dark-border text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 hover:border-primary-500/50 transition-all hover:-translate-y-1"
                aria-label="LinkedIn"
            >
                <i class="fa-brands fa-linkedin text-xl"></i>
            </a>
            <a
                href="https://twitter.com/eladhon"
                target="_blank"
                rel="noopener noreferrer"
                class="p-3 rounded-full bg-gray-100 dark:bg-dark-surface border border-gray-200 dark:border-dark-border text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 hover:border-primary-500/50 transition-all hover:-translate-y-1"
                aria-label="Twitter"
            >
                <i class="fa-brands fa-x-twitter text-xl"></i>
            </a>
            <!-- 
            <a
                href="mailto:eldho@example.com"
                class="p-3 rounded-full bg-gray-100 dark:bg-dark-surface border border-gray-200 dark:border-dark-border text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 hover:border-primary-500/50 transition-all hover:-translate-y-1"
                aria-label="Email"
            >
                <i class="fa-solid fa-envelope text-xl"></i>
            </a>
            -->
        </div>
    </div>

    <!-- Image Column (Moved to Right) -->
    <div
        class="relative w-72 h-72 md:w-[32rem] md:h-[32rem] shrink-0 animate-fade-in group flex items-center justify-center"
        style="animation-delay: 200ms;"
    >
        <div
            class="absolute inset-0 rounded-3xl bg-white/30 dark:bg-white/5 backdrop-blur-xl border border-white/20 dark:border-white/10 shadow-2xl transition-all duration-500 group-hover:bg-white/40 dark:group-hover:bg-white/10"
            style="-webkit-mask-image: linear-gradient(to right, transparent, black); mask-image: linear-gradient(to right, transparent, black);"
        >
        </div>
        <Image
            src={profileImage}
            alt="Eldho Eapen"
            class="relative z-10 w-[90%] h-[90%] object-contain drop-shadow-2xl transition-transform duration-500 group-hover:scale-105 dark:brightness-90"
        />
    </div>
</section>
