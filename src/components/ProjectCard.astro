---
import type { Project } from "../data/projects";

interface Props {
    project: Project;
}

const { project } = Astro.props;
---

<div
    class="group relative rounded-xl border border-gray-200 dark:border-dark-border bg-white dark:bg-dark-surface/50 p-6 backdrop-blur-sm transition-all hover:border-primary-500/50 hover:bg-gray-50 dark:hover:bg-dark-surface/80 hover:shadow-lg hover:shadow-primary-500/10 flex flex-col h-full"
>
    <div class="mb-4 flex items-start justify-between">
        <h3
            class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors"
        >
            <a
                href={project.github || "#"}
                target="_blank"
                rel="noopener noreferrer"
                class="before:absolute before:inset-0 focus:outline-none"
            >
                {project.title}
            </a>
        </h3>
        <div class="flex gap-3 text-gray-500 dark:text-gray-400 relative z-10">
            {
                project.github && (
                    <span class="hover:text-gray-900 dark:hover:text-white transition-colors">
                        <i class="fa-brands fa-github text-xl" />
                    </span>
                )
            }
            {
                project.link && (
                    <a
                        href={project.link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:text-gray-900 dark:hover:text-white transition-colors"
                    >
                        <i class="fa-solid fa-up-right-from-square text-lg" />
                    </a>
                )
            }
        </div>
    </div>

    <p
        class="mb-6 text-gray-600 dark:text-gray-400 leading-relaxed text-sm flex-grow"
    >
        {project.description}
    </p>

    <div class="flex flex-wrap gap-2 mt-auto relative z-10">
        {
            project.tech.map((t) => (
                <span class="rounded-full bg-primary-100 dark:bg-primary-500/10 px-3 py-1 text-xs font-medium text-primary-700 dark:text-primary-300 border border-primary-200 dark:border-primary-500/20">
                    {t}
                </span>
            ))
        }
    </div>
</div>
