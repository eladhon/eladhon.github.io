---
const education = [
    {
        role: "Computer Engineering",
        company: "Govt. Polytechnic College, Muttom",
        maps: "https://maps.app.goo.gl/rtbGhEN7J8TTRUjd7",
        period: "2024 - Present",
        description:
            "Relevant coursework: Data Structures, Object-Oriented Programming, Database Management Systems",
    },
    {
        role: "Computer Science",
        company: "Technical Higher Secondary School, Muttom",
        maps: "https://maps.app.goo.gl/51GcUKHANe1ed76Z8",
        period: "2022 - 2024",
        description:
            "Core subjects: Programming Fundamentals, Computer Systems",
    },
];
---

<section id="education" class="py-20">
    <div class="flex items-center justify-between mb-12">
        <h2
            class="text-3xl font-bold text-gray-900 dark:text-white flex items-center gap-3"
        >
            <span class="text-primary-600 dark:text-primary-400">03.</span> Education
        </h2>
        <div
            class="h-px bg-gray-200 dark:bg-dark-border flex-1 ml-6 hidden sm:block opacity-50"
        >
        </div>
    </div>

    <div
        class="space-y-8 relative before:absolute before:inset-0 before:left-2 before:h-full before:w-0.5 before:bg-gradient-to-b before:from-primary-500 before:to-transparent"
    >
        {
            education.map((ed) => (
                <div class="relative pl-8 md:pl-12 group">
                    <a href={ed.maps}>
                        <div class="absolute left-[3px] top-2 w-3 h-3 rounded-full bg-primary-500 ring-4 ring-white dark:ring-dark-bg transition-transform group-hover:scale-125" />
                        <div class="bg-white dark:bg-dark-surface/50 border border-gray-200 dark:border-dark-border rounded-xl p-6 hover:border-primary-500/50 transition-colors shadow-sm dark:shadow-none">
                            <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-2 gap-1">
                                <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                                    {ed.role}
                                </h3>
                                <span class="text-sm font-medium text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-500/10 px-3 py-1 rounded-full w-fit">
                                    {ed.period}
                                </span>
                            </div>
                            <p class="text-lg font-medium text-gray-700 dark:text-gray-300 mb-4">
                                {ed.company}
                            </p>
                            <p class="text-gray-600 dark:text-gray-400 leading-relaxed text-sm">
                                {ed.description}
                            </p>
                        </div>
                    </a>
                </div>
            ))
        }
    </div>
</section>
